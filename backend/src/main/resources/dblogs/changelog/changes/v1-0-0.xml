<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="addMissingUsernameUniqueConstraint" author="MDeLuise">
        <addUniqueConstraint
                columnNames="username"
                constraintName="username_unique"
                tableName="application_users"
        />
    </changeSet>

    <changeSet id="updateUsernameAndPasswordColumnsLengths" author="MDeLuise">
        <modifyDataType
                tableName="application_users"
                columnName="username"
                newDataType="varchar(20)"
        />
        <modifyDataType
                tableName="application_users"
                columnName="password"
                newDataType="varchar(120)"
        />
    </changeSet>

    <changeSet id="addPlantAvatar1" author="MDeLuise">
        <addColumn tableName="plants">
            <column name="avatar" type="varchar(255)">
                <constraints nullable="true"
                             foreignKeyName="fk_plant_avatarId"
                             references="entity_images(id)"
                />
            </column>
            <column name="avatar_mode" type="varchar(50)" defaultValue="NONE">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="entity_images">
            <column name="avatar_of" type="bigint">
                <constraints nullable="true"
                             foreignKeyName="fk_avatar_plantId"
                             references="plants(id)"
                />
            </column>
        </addColumn>
        <!--        <update tableName="plants">-->
        <!--            <column name="avatar_mode" value='NONE' type="varchar(50)"/>-->
        <!--            <where>avatar_mode IS NULL</where>-->
        <!--        </update>-->
    </changeSet>

</databaseChangeLog>
